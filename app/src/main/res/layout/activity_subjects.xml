<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subjectLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"

    tools:context=".Subjects">


    <LinearLayout
        android:id="@+id/layoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#30ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_back"
            app:tint="#03DAC5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choose Subject"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


    <ScrollView
        android:layout_below="@+id/layoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/math"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#00FF00"
        android:text="MATH"
        android:textStyle="bold" />



    <Button
        android:id="@+id/english"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/math"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#F4DF4EFF"
        android:text="ENGLISH"
        android:textStyle="bold" />


    <Button
        android:id="@+id/science"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/math"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#949398"
        android:text="SCIENCE"
        android:textStyle="bold" />

    <Button
        android:id="@+id/socialScience"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/english"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#F4DF4E"
        android:textStyle="bold"
        android:text="SOCIAL SCIENCE" />


    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/science"
        android:layout_margin="20dp"
        android:text="@string/business_studies"
        android:backgroundTint="#FC766A"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/computerStudies"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/socialScience"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="COMPUTER Studie"
        android:backgroundTint="#5B84B1"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/religious"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/computerStudies"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="RELIGIOUS E"
        android:backgroundTint="#E69A8D"
        android:textStyle="bold"/>



    <Button
        android:id="@+id/music"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/computerStudies"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="MUSIC"
        android:backgroundTint="#5F4B8B"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/french"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/music"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="FRENCH"
        android:backgroundTint="#42eadd"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/agriculturalScience"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/religious"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="AGRICULTURAL"
        android:backgroundTint="#CDB599"
        android:textStyle="bold"/>




</LinearLayout>

    </ScrollView>


</RelativeLayout>